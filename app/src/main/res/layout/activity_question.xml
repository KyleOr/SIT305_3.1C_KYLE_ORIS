<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Welcome Message (e.g., Welcome, [User's Name]) -->
    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Progress Bar and Quiz Tracker -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Quiz Tracker (e.g., 1 / 5) -->
        <TextView
            android:id="@+id/quizTracker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz_tracker"
            android:textSize="18sp"
            android:layout_marginEnd="10dp"/>

        <!-- Progress Bar (rectangle) -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="20"
            android:max="100"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
    </LinearLayout>

    <!-- Question Title -->
    <TextView
        android:id="@+id/questionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <!-- Question Text -->
    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_placeholder"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <!-- Answer Radio Buttons -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        android:gravity="center">

        <!-- Option A -->
        <RadioButton
            android:id="@+id/optionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer_a"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:textColor="@android:color/black"  />

        <!-- Option B -->
        <RadioButton
            android:id="@+id/optionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer_b"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:textColor="@android:color/black" />

        <!-- Option C -->
        <RadioButton
            android:id="@+id/optionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer_c"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:textColor="@android:color/black" />
    </RadioGroup>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit_button"
        android:textSize="20sp"
        android:padding="15dp"
        android:layout_marginTop="20dp" />
</LinearLayout>
